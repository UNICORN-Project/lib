<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imagewatch_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <com.unicorn.view.ScalableView
        android:id="@+id/scalableView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.unicorn.view.ScalableView>

    <ImageView
        android:id="@+id/img_profile_sub"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/profile_image_edit_red"
        android:contentDescription="@null"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:id="@+id/imageedit_panel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333333" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="#00FFFFFF"
                android:text="キャンセル"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_select"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="#00FFFFFF"
                android:text="選択"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>